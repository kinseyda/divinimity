---
import DebugInfo from "../components/DebugInfo.vue";
import "../styles/global.css";
const astroInfo = {
  href: Astro.url.href,
  origin: Astro.url.origin,
  pathname: Astro.url.pathname,
  generator: Astro.generator,
  buildDate: new Date().toISOString(), // Note this is run at build time
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Divinimity</title>
  </head>
  <body>
    <div class="relative min-h-screen">
      <div class="relative flex flex-col h-screen items-center">
        <slot />
      </div>
    </div>
    <DebugInfo client:load astroInfo={astroInfo} />
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  </style>
</html>
